<executions>
    <execution>
        <goals>
            <goal>prepare-agent</goal>
        </goals>
        <configuration>
            <destFile>${project.build.directory}/jacoco-ut.exec</destFile>
        </configuration>
    </execution>
    <execution>
        <id>pre-integration-prepare</id>
        <goals>
            <goal>prepare-agent-integration</goal>
